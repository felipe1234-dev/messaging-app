{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
